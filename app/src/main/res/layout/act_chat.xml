<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="聊天"
        android:textColor="@color/colorPrimaryText"
        android:elevation="@dimen/dp_5"
        android:textSize="@dimen/dp_18" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@color/colorListItemBackground"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <LinearLayout
        android:elevation="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_55"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_5">

        <ImageView
            android:id="@+id/iv_change_state"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/ic_voice_dark" />

        <EditText
            android:id="@+id/etText"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foregroundTint="@color/colorAccent"
            android:hint="点击请输入文本"
            android:textColor="@color/colorPrimaryText"
            android:textColorHint="@color/colorPrimaryText" />

        <com.foundation.widget.shape.ShapeTextView
            android:id="@+id/tvStartEnd"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_5"
            android:shape="rectangle"
            android:text="正在录音"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/dp_15"
            android:visibility="gone"
            app:shapeCornersRadius="@dimen/dp_5"
            app:shapeSolidColor="@color/colorAccent"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ivSend"
            android:layout_width="@dimen/dp_35"
            android:src="@drawable/ic_send"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="@dimen/dp_35" />

    </LinearLayout>
</LinearLayout>