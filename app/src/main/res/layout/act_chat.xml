<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/toolBar"
        android:text="聊天"
        android:gravity="center"
        android:textSize="@dimen/dp_18"
        android:textColor="@color/color_f0f0f0"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="@color/color_2d2d2f"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#1C1C1E"
        android:paddingVertical="@dimen/dp_5">

        <ImageView
            android:src="@drawable/ic_voice_dark"
            android:id="@+id/iv_change_state"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:padding="@dimen/margin_5dp"
            android:text="语音"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_14" />

        <EditText
            android:id="@+id/etText"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_f0f0f0"
            android:foregroundTint="#0CA6A4"
            android:textColorHint="@color/color_f0f0f0"
            android:hint="点击请输入文本" />

        <com.foundation.widget.shape.ShapeTextView
            android:id="@+id/tvStartEnd"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_5"
            android:shape="rectangle"
            android:text="点击开始录音"
            android:textColor="@color/color_f0f0f0"
            android:textSize="@dimen/dp_15"
            android:visibility="gone"
            app:shapeCornersRadius="@dimen/dp_5"
            app:shapeSolidColor="@color/colorPrimary"
            tools:visibility="visible" />

        <com.foundation.widget.shape.ShapeTextView
            android:id="@+id/tvCancelAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:shape="rectangle"
            android:text="取消"
            android:textColor="@color/color_f0f0f0"
            app:shapeSolidColor="#3A3A3C"
            android:textSize="@dimen/dp_15"
            android:visibility="gone"
            app:shapeCornersRadius="@dimen/dp_5"
            tools:visibility="visible" />

        <com.foundation.widget.shape.ShapeTextView
            android:id="@+id/tvSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:shape="rectangle"
            android:text="发送"
            android:textColor="@color/color_f0f0f0"
            app:shapeSolidColor="#3A3A3C"
            android:textSize="@dimen/dp_15"
            app:shapeCornersRadius="@dimen/dp_5" />
    </LinearLayout>
</LinearLayout>