<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorListItemBackground"
    android:gravity="center_vertical"
    android:minHeight="@dimen/dp_45"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:background="@drawable/ic_chat_gpt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=". . ."
        android:textColor="@color/color_f0f0f0"
        app:layout_constraintBottom_toBottomOf="@id/ivCycle"
        app:layout_constraintLeft_toRightOf="@id/ivCycle" />

    <ImageView
        android:id="@+id/ivCycle"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/colorListItemBackgroundSub"
        android:src="@drawable/ic_loading_cycle"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintLeft_toRightOf="@+id/iv_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>